import java.util.Scanner;  // Import the Scanner class
public class LargestOf3 {
    public static void main(String[] args) {
        System.out.println("\n\n welcome to the double int program! \n\n ");


        int firstNum = 0;
        int secondNum = 0;
        int thirdNum = 0;
        int largestOfThree = 0;


        Scanner myScannerObj = new Scanner(System.in);  // Create a Scanner object

        // ask user 4 int
        System.out.println("\n pls enter a whole #: ");
        firstNum = myScannerObj.nextInt();


        // ask user 4 2nd input
        System.out.println("\n pls enter a whole 2nd #: ");
        secondNum = myScannerObj.nextInt();

        //  // ask user 4 3rd input
        System.out.println("\n the value of a thirdNum is: " );
        thirdNum = myScannerObj.nextInt();

// processing
        // com[are the omputs with nested if statements

        if (firstNum > secondNum) {
            if (firstNum > thirdNum) {
                largestOfThree = firstNum;
            } else {
                largestOfThree = thirdNum;
            }
        } else {
            if (secondNum > thirdNum) {
                largestOfThree = secondNum;
            } else {
                largestOfThree = thirdNum;
            }
        }
        // output largest of three
        System.out.println("\n largest of three is: " + largestOfThree);
    }
}
